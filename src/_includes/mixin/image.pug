mixin image(name= '', bgc= '#fff', color= '#000')
  svg(class!=attributes.class width!=attributes.width height!=attributes.height xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img") 
    rect(width="100%" height="100%" fill=`${bgc}`)
    text(x="50%" y="50%" fill=`${color}` dy=".3em" dominant-baseline="middle" text-anchor="middle")= name